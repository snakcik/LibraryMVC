@using LibraryMVC.Models.View

@{
    ViewData["Title"] = "Index";
}
@model List<BookViewModel>

<h1>Index</h1>

<a asp-controller="Book" asp-action="BookCrate" class="btn btn-primary">Create</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Author</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td>@item.BookName</td>
                <td>@item.BookPrice</td>
                <td>@item.CategoryName</td>
                <td>@item.AuthorName</td>
                <td><a asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete </a>  </td>
            </tr>

            }

        </tbody>
</table>

